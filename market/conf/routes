# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.MarketController.index

POST    /carKind/add		   controllers.MarketController.addCarKind(req: Request)
GET      /carKind/all			   controllers.MarketController.getCarKinds(req: Request)
POST		/carKind/delete 	   controllers.MarketController.deleteCarKind(req: Request)


POST   /carModel/add		   controllers.MarketController.addCarModel(req: Request)
GET   /carModel/all		   controllers.MarketController.getCarModels(req: Request)
POST		/carModel/delete 	   controllers.MarketController.deleteCarModel(req: Request)


POST   /carPosition/add		   controllers.MarketController.addCarPosition(req: Request)
GET   /carPosition/all		   controllers.MarketController.getCarPositions(req: Request)
POST		/carPosition/delete 	   controllers.MarketController.deleteCarPosition(req: Request)

GET   /carPosition/search			controllers.MarketController.searchCarPositions(req: Request)
# Map static resources from the /public folder to the /assets URL path
GET     /images/*file               controllers.Assets.at(path="/public", file)